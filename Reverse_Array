import java.util.Arrays;

public class RevserseArrayQ10 {
    public static void main(String[] args) {
        int[] n={4,5,7,1,2};
         for(int i=0;i<n.length/2;i++){
        int temp=n[i];
        n[i]=n[n.length-i-1];
        n[n.length-i-1]=temp;
    }
    System.out.println(Arrays.toString(n));
    }
    }

